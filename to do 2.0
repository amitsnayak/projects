import tkinter as tk
from tkinter import ttk, messagebox
import json
from datetime import datetime


class Task:
    def __init__(self, title, priority, deadline, done=False):
        self.title = title
        self.priority = priority
        self.deadline = deadline
        self.done = done

    def mark_done(self):
        self.done = True

    def to_dict(self):
        return {
            "title": self.title,
            "priority": self.priority,
            "deadline": self.deadline,
            "done": self.done
        }

    @staticmethod
    def from_dict(data):
        return Task(data["title"], data["priority"], data["deadline"], data["done"])


class TodoListApp:
    def __init__(self, master):
        self.master = master
        self.master.title("üìã To-Do List Manager")
        self.master.geometry("650x400")
        self.master.resizable(False, False)

        self.tasks = []
        self.filename = "tasks.json"
        self.load_tasks()

        self.create_widgets()
        self.populate_tasks()

    
    def create_widgets(self):
        # --- Form Frame ---
        form_frame = tk.Frame(self.master, pady=10)
        form_frame.pack(fill="x")

        tk.Label(form_frame, text="Task Title:").grid(row=0, column=0, padx=5, pady=5, sticky="w")
        self.title_entry = tk.Entry(form_frame, width=30)
        self.title_entry.grid(row=0, column=1, padx=5, pady=5)

        tk.Label(form_frame, text="Priority (1=High,2=Med,3=Low):").grid(row=0, column=2, padx=5, pady=5, sticky="w")
        self.priority_entry = tk.Entry(form_frame, width=5)
        self.priority_entry.grid(row=0, column=3, padx=5, pady=5)

        tk.Label(form_frame, text="Deadline (YYYY-MM-DD):").grid(row=1, column=0, padx=5, pady=5, sticky="w")
        self.deadline_entry = tk.Entry(form_frame, width=15)
        self.deadline_entry.grid(row=1, column=1, padx=5, pady=5)

        tk.Button(form_frame, text="Add Task", command=self.add_task, bg="#4CAF50", fg="white").grid(row=1, column=3, padx=5, pady=5)

        # --- Task Table ---
        self.tree = ttk.Treeview(self.master, columns=("Title", "Priority", "Deadline", "Status"), show="headings", height=15)
        self.tree.pack(pady=10, fill="x")

        self.tree.heading("Title", text="Title")
        self.tree.heading("Priority", text="Priority")
        self.tree.heading("Deadline", text="Deadline")
        self.tree.heading("Status", text="Status")

        self.tree.column("Title", width=250)
        self.tree.column("Priority", width=80, anchor="center")
        self.tree.column("Deadline", width=120, anchor="center")
        self.tree.column("Status", width=80, anchor="center")

       
        btn_frame = tk.Frame(self.master, pady=10)
        btn_frame.pack(fill="x")

        tk.Button(btn_frame, text="Mark Done", command=self.mark_done, bg="#2196F3", fg="white").pack(side="left", padx=10)
        tk.Button(btn_frame, text="Sort by Priority", command=lambda: self.sort_tasks("priority"), bg="#FF9800", fg="white").pack(side="left", padx=10)
        tk.Button(btn_frame, text="Sort by Deadline", command=lambda: self.sort_tasks("deadline"), bg="#FF9800", fg="white").pack(side="left", padx=10)
        tk.Button(btn_frame, text="Save & Exit", command=self.save_and_exit, bg="#f44336", fg="white").pack(side="right", padx=10)

    
    def add_task(self):

        title = self.title_entry.get().strip()
        priority = self.priority_entry.get().strip()
        deadline = self.deadline_entry.get().strip()

        if not title or not priority or not deadline:
            messagebox.showwarning("Input Error", "Please fill all fields.")
            return

        try:
            priority = int(priority)
            if priority not in [1, 2, 3]:
                raise ValueError
        except ValueError:
            messagebox.showerror("Input Error", "Priority must be 1, 2, or 3.")
            return

        try:
            datetime.strptime(deadline, "%Y-%m-%d")
        except ValueError:
            messagebox.showerror("Input Error", "Deadline must be in YYYY-MM-DD format.")
            return

        task = Task(title, priority, deadline)
        self.tasks.append(task)
        self.populate_tasks()
        self.clear_form()
        messagebox.showinfo("Success", f"Task '{title}' added successfully!")

    def populate_tasks(self):
        """Refresh the task table."""
        for row in self.tree.get_children():
            self.tree.delete(row)

        for i, task in enumerate(self.tasks):
            status = "‚úî" if task.done else "‚ùå"
            self.tree.insert("", "end", iid=i, values=(task.title, task.priority, task.deadline, status))

    def clear_form(self):
        
        self.title_entry.delete(0, tk.END)
        self.priority_entry.delete(0, tk.END)
        self.deadline_entry.delete(0, tk.END)

    def mark_done(self):
        
        selected = self.tree.selection()
        if not selected:
            messagebox.showwarning("Selection Error", "Please select a task.")
            return

        for item in selected:
            idx = int(item)
            self.tasks[idx].mark_done()

        self.populate_tasks()
        messagebox.showinfo("Success", "Selected task(s) marked as done.")

    def sort_tasks(self, key):
    
        if key == "priority":
            self.tasks.sort(key=lambda t: t.priority)
        elif key == "deadline":
            self.tasks.sort(key=lambda t: t.deadline)
        self.populate_tasks()

   
    def save_tasks(self):
       
        with open(self.filename, "w") as f:
            json.dump([task.to_dict() for task in self.tasks], f, indent=4)

    def load_tasks(self):
        
        try:
            with open(self.filename, "r") as f:
                data = json.load(f)
                self.tasks = [Task.from_dict(d) for d in data]
        except FileNotFoundError:
            self.tasks = []

    def save_and_exit(self):
        
        self.save_tasks()
        messagebox.showinfo("Goodbye", "Tasks saved! Exiting application.")
        self.master.destroy()



if __name__ == "__main__":
    root = tk.Tk()
    app = TodoListApp(root)
    root.mainloop()

